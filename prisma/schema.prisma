generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id
  email        String?
  username     String?   @unique
  password     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  employeeId   String?
  Department   String?
  Division     String?
  EngName      String?
  Mobile_Phone String?
  Position     String?
  Section      String?
  ThaiName     String?
  image_url    String?
  role         String    @default("USER")
  
  trips        Trip[]
  vehicles     Vehicle[]
}

model Vehicle {
  id              Int       @id @default(autoincrement())
  licensePlate    String    @unique
  province        String?
  brand           String?
  model           String?
  type            String?   // e.g. "Pick-up", "Sedan"
  capacity        Int?
  status          String    @default("AVAILABLE") // AVAILABLE, IN_USE, MAINTENANCE
  section         String?   // Department/Section ownership
  userId          String?
  user            User?     @relation(fields: [userId], references: [id])
  currentOdometer Int       @default(0)
  imageUrl        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  trips           Trip[]
}

model Trip {
  id              Int       @id @default(autoincrement())
  vehicleId       Int
  vehicle         Vehicle   @relation(fields: [vehicleId], references: [id])
  driverId        String?
  driver          User?     @relation(fields: [driverId], references: [id])
  
  departureDate   DateTime
  returnDate      DateTime?
  
  origin          String?
  destination     String?
  description     String?   // Purpose/Job details
  
  mileageStart    Int
  mileageEnd      Int?
  totalDistance   Int?
  
  status          String    @default("ONGOING") // ONGOING, COMPLETED
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  fuelLogs        FuelLog[]
}

model FuelLog {
  id              Int       @id @default(autoincrement())
  tripId          Int
  trip            Trip      @relation(fields: [tripId], references: [id], onDelete: Cascade)
  
  odometer        Int
  liter           Decimal
  price           Decimal
  station         String?
  location        String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

